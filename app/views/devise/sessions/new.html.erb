<div class="row">
  <div class="col-sm-4 offset-sm-4">
    <div class="card mt-5">
      <div class="card-body pb-5">
        <h2 class="text-center mt-3">ログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mt-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
          </div>

          <div class="field mt-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mt-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログイン情報を保存" %>
            </div>
          <% end %>

          <div class="actions text-center mt-4">
            <%= f.submit "ログイン", class: "btn btn-primary form-control" %>
          </div>
        <% end %>
        <div class="text-center mt-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
